extends layout

block content

  .container

    .page-header
      h1
        a( href="/" ).lead Warmachine Tournament Tracker

    div#initialContent
      = appData

    div.app

    script(id="playertemplate", type="text/x-handlebars")
      <a href="#" class="name">{{name}}</a>
      <p>City: {{City}}</p>

    script(id="tournamentdropdown", type="text/x-handlebars")
      option(name="{{name}}")

    script(id="detailedtournamenttemplate" type="text/x-handlebars")
      h3 Tournament


    script(id="detailedplayertemplate", type="text/x-handlebars")
      <h2>{{name}}</h2>
      <p>City: {{City}}</p>

    script(id="submitplayertemplate", type="text/x-handlebars")

      h3 Add a New Player

      form(action="" method="").addPlayer.form-horizontal
        .form-group
          label(for="name" class="col-sm-2 control-label") Name
          .col-sm-6
            input(type="text", class="form-control" name="name")
        .form-group
          label(for="City" class="col-sm-2 control-label") City
          .col-sm-6
            input(type="text", class="form-control" name="City")
        .form-group
          .col-sm-offset-2.col-sm-10
            button(type="submit").submit_button.btn.btn-primary Submit

  footer.container
    a(href="#submit/player").submit_player Add Player